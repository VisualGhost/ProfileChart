<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.profilechart.MainActivity">

    <com.profilechart.profile.ProfileChartView
        android:id="@+id/profileChartView"
        android:layout_width="@dimen/profile_chart_width"
        android:layout_height="@dimen/profile_chart_height"
        android:layout_centerInParent="true"
        android:background="#878787"
        app:circleMargin="@dimen/profile_chart_circle_margin"
        app:instrumentNameTextSize="@dimen/profile_chart_instrument_name_text_size"
        app:pLInstrumentNameTextSize="@dimen/profile_chart_pl_instrument_text_size"
        app:pLTextColor="@color/profile_chart_pl_instrument_name_color"
        app:pLValueDecTextColor="@color/profile_chart_pl_value_dec_color"
        app:pLValueIncTextColor="@color/profile_chart_pl_value_inc_color"
        app:percentageBottomMargin="@dimen/profile_chart_percentage_bottom_margin"
        app:percentageTextSize="@dimen/profile_chart_percentage_text_size"
        app:profileChartDebugMode="false"
        app:profileChartScale="3"
        app:strokeRadius="@dimen/profile_chart_stroke_radius"
        app:strokeWidth="@dimen/profile_chart_stroke_width"
        app:strokeWidthSelected="@dimen/profile_chart_stroke_selected_width"
        />
</RelativeLayout>
